						"body": {
							"mode": "raw",
							"raw": "{\n    \"method\": \"searchCoin\",\n    \"args\": {\n        \"network\": \"ethereum\",\n        \"string\": \"btc\",\n        \"limit\": 10,\n        \"offset\": 0\n    }\n}",
							"options": {
